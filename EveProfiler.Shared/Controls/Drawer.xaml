                        <TextBlock Grid.Column="2" Text="Assets" FontSize="15" Margin="10 0 0 0" VerticalAlignment="Center"/>
                    </Grid>
                </ListViewItem>
                <ListViewItem Tapped="Science_Tapped">
                    <Grid>
                        <Grid.ColumnDefinitions>
